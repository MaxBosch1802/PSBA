import pandas as pd

# CSV-Dateien einlesen
df_connections = pd.read_csv("passed_connections.csv")
df_stats = pd.read_csv("verbindungen_mit_kennzahlen.csv")

# Join durchf√ºhren (inner join: nur passende Zeilen bleiben)
df_joined = pd.merge(df_connections, df_stats, 
                     on=["AIRLINE_ID", "UNIQUE_CARRIER_ENTITY", "ORIGIN", "DEST", "AIRCRAFT_TYPE"],
                     how="inner")

# Ergebnis anzeigen oder speichern
print(df_joined.head())
# Optional: df_joined.to_csv("joined_result.csv", index=False)